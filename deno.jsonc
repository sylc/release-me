{
  "tasks": {
    "test": "deno run -A ./cli.ts --dry --allowUncommitted --regex \"(?<=@)(.*)(?=\/cli)\"",
    "release": "deno fmt --check && deno lint && deno run -A ./cli.ts --regex \"(?<=@)(.*)(?=\/cli)\" --github --versionFile --changelog"
  },
  "fmt": {
    "files": {
      "exclude": ["CHANGELOG.md"]
    }
  }
}
